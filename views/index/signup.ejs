<%- include("../partials/top") %> 

<main class="form-page">
  <div class="page-header">
    <div class="btn-container">
      <a href="/" class="btn">
        <span class="material-symbols-outlined">home</span>
      </a>
    </div>
    <h1 class="page-title">
      <%= title %>
    </h1>
  </div>
  <% if (errors.length) { %>
    <ul class="error">
      <% errors.forEach(err=> { %>
        <li>
          <%= err.msg %>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <form method="POST">
    <div class="input-container">
      <label for="fname">First name</label>
      <input type="text" name="fname" id="fname" value="<%= fname %>">
      <span></span>
    </div>
    <div class="input-container">
      <label for="lname">Last name</label>
      <input type="text" name="lname" id="lname" value="<%= lname %>">
    </div>
    <div class="input-container">
      <label for="username">E-mail</label>
      <input type="email" name="username" id="username" value="<%= username %>">
    </div>
    <div class="input-container">
      <label for="password">password</label>
      <input type="password" name="password" id="password" value=<%= password %>>
      <span class="material-symbols-outlined eye">
        visibility
        </span>
    </div>
    <div class="input-container">
      <label for="confirm">Confirm password</label>
      <input type="password" name="confirm" id="confirm" value=<%= confirm %>>
      <span class="material-symbols-outlined eye">
        visibility
        </span>
    </div>
    <div class="input-container checkbox">
      <label for="admin">Admin
      </label>
      <input type="checkbox" name="admin" id="admin" <%= admin ? 'checked' : '' %>>
    </div>
    <button type="submit">Sign up</button>
  </form>
</main>

<%- include("../partials/bottom") %>